{
  "name": "tasklytic-desktop",
  "version": "1.0.0",
  "description": "Todo App Pro - Masaüstü Uygulaması",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron .",
    "dev:server": "cd server && npm run dev",
    "start": "concurrently --kill-others \"npm run dev\" \"npm run dev:server\"",
    "start:full": "concurrently --kill-others \"npm run dev\" \"npm run dev:server\" \"wait-on http://localhost:5173 http://localhost:3001 && npm run dev:electron\"",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-builder build --win",
    "package:portable": "npm run build && electron-builder build --win portable"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.5.0",
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "vite": "^4.4.5",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.todoapp.desktop",
    "productName": "Todo App Pro",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "server/src/**/*",
      "server/package.json",
      "server/node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}